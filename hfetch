#!/bin/sh
read -r host < /proc/sys/kernel/hostname
read -r kernel < /proc/sys/kernel/osrelease
. /etc/os-release
green="[92m"
yellow="[93m"
white="[0m"
printf "  ${green}pc${white} ~ ${host}
  ${green}os${white} ~ ${PRETTY_NAME}
  ${green}sh${white} ~ ${SHELL##*/}
  ${green}wm${white} ~ $(wmctrl -m | head -1 | sed 's/Name\:\ //')
  ${green}kr${white} ~ $(uname -r)
  ${green}md${white} ~ $(playerctl metadata artist) - $(playerctl metadata title) ($(playerctl status))
  ><> ${white}hello, ${yellow}${USER}${white}
"
